                    <input type="email" class="form-control" name="emailParent2" id="emailParent2" value="">
                    <p class="displayError">Please enter a valid parent's email</p>
                </div>
            </div>
            <div class="form-group row termsRow">
                @*<label class="shortLabel col-lg-4 col-md-4 col-sm-4 col-xs-12" for="classSelect"></label>*@
                <div class="shortField col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="checkboxWrapper">
                        <div class="checkbox">
