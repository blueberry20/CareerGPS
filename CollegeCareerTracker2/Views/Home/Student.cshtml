
@{
    ViewBag.Title = "Student";
}



<div class="container questionnairePage flex1">
    <!--==================================student questions=========================-->

    <h2>Student</h2>
    <div id="studentContactInformation1" class="parentQuestions">
        <h2>Tell us about yourself</h2>
        <div class="formContainer">
            <div class="form-group row">
                <label class="shortLabel col-lg-4 col-md-4 col-sm-4 col-xs-12" for="firstnameStudent">First Name:</label>
                <div class="shortField col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <input type="text" class="form-control required1" name="firstnameStudent" id="firstnameStudent" value="">
                    <p class="displayError">Please enter your valid first name</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="shortLabel col-lg-4 col-md-4 col-sm-4 col-xs-12" for="lastnameStudent">Last Name:</label>
                <div class="shortField col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <input type="text" class="form-control required1" name="lastnameStudent" id="lastnameStudent" value="">
                    <p class="displayError">Please enter your valid last name</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="shortLabel col-lg-4 col-md-4 col-sm-4 col-xs-12" for="phonenumberStudent">Phone Number <span class="smallFont">(preferably mobile)</span>:</label>
                <div class="shortField col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <input type="tel" class="form-control required1" name="phonenumberStudent" id="phonenumberStudent" value="">
                    <p class="displayError">Please enter your valid phone number</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="shortLabel col-lg-4 col-md-4 col-sm-4 col-xs-12" for="emailStudent">Email:</label>
                <div class="shortField col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <input type="email" class="form-control required1" name="emailStudent" id="emailStudent" value="">
                    <p class="displayError">Please enter your valid email</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="shortLabel col-lg-4 col-md-4 col-sm-4 col-xs-12 required" for="childGradeStudent">Grade Level</label>
                <div class="shortField col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <select class="form-control required1" id="childGradeStudent" name="childgradeStudent" value="">
                        <option disabled selected value>Select</option>
                        <option value="freshman">Freshman</option>
                        <option value="sophomore">Sophomore</option>
                        <option value="junior">Junior</option>
                        <option value="senior">Senior</option>
                        <option value="other">Other</option>
                    </select>
                    <p class="displayError">Please fill out your grade</p>
                </div>
            </div>

            <div class="text-center">
                <button class="standardButton continueBtn" id="studentContactContinueBtn">Continue</button>
            </div>

            @*<div class="backNextButtonsWrapper flexDiv">
                    <div class="column">
                        <div class="goBackBtn">Go back</div>
                    </div>
                    <div class="column">
                        <div id="studentContactNextBtn" class="nextBtn">Next</div>
                    </div>
                </div>*@

        </div>
